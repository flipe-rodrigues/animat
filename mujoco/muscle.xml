<mujoco model="muscle">
  <option gravity="0 0 0"/>
  
  <visual>
    <map force="0.1" zfar="30" />
    <rgba haze="0 0 0 1" />
    <global offwidth="1920" offheight="1080" elevation="-90" azimuth="0" />
    <quality shadowsize="2048" />
    <headlight ambient="0.3 0.3 0.3" diffuse="0.8 0.8 0.8" specular="0.4 0.4 0.4" />
  </visual>

  <default>
    <muscle ctrllimited="true" ctrlrange="0 1" />
  </default>

  <worldbody>
    <body name="passive_plate" pos="0 -.025 0">
      <site name="extrafusal_site1" pos="0 .025 0" size="0.025" />
      <geom type="box" size=".25 .025 0.25" density="300" rgba="1 1 1 1" />

      <body name="active_plate" pos="0 .15 0">
        <site name="extrafusal_site2" pos="0 -.025 0" size="0.025" />
        <geom type="box" size=".25 .025 0.25" density="300" rgba="1 0 0 1" /> 
        <joint name="stretcher_joint" pos="0 .4 0" type="slide" axis="0 1 0" damping="0" />
      </body>
    </body>

    <body name="dummy_body" pos="0 10 0">
      <geom type="box" size=".01 .01 0.01" density="300" rgba="0 0 1 1" /> 
      <joint name="dummy_joint" type="slide" axis="0 0 1" damping="100" />
    </body>
  </worldbody>

  <tendon>
    <spatial name="extrafusal" limited="true" range=".1 .5" width="0.008">
      <site site="extrafusal_site1" />
      <site site="extrafusal_site2" />
    </spatial>
  </tendon>

  <actuator>
    <velocity name="stretcher" joint="stretcher_joint" kv="1000" ctrlrange="-1 1" />
    <muscle name="muscle" tendon="extrafusal" force="1" timeconst=".01 .04" ctrlrange="0 1" />
    <velocity name="alpha_drive" joint="dummy_joint" kv="1" ctrlrange="0 1" />
    <velocity name="gamma_static" joint="dummy_joint" kv="1" ctrlrange="0 1" />
    <velocity name="gamma_dynamic" joint="dummy_joint" kv="1" ctrlrange="0 1" />
  </actuator>

  <sensor>
    <actuatorpos name="muscle_length" actuator="muscle" />
    <actuatorvel name="muscle_velocity" actuator="muscle" />
    <actuatorfrc name="muscle_force" actuator="muscle" />
  </sensor>

</mujoco>